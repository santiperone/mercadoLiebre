<!DOCTYPE html>
<html lang="es">
<%- include('partials/head') %>
<body>
    <%- include('partials/header') %>

    <main>
        <section>
            <h2 class="section-title">Todos los productos</h2>
            <div class="articles">
                <% products.forEach(product => { %>
                <a href="/products/<%= product.id %> " class="product">
                    <img src="/img/products/<%= product.image %>" alt="<%= product.name %> ">
                    <div class="product-text">
                        <h3><%= product.name %></h3>
                        <h4 class="price">$ <%= product.pricewd %> <% if (product.discount > 0) { %>
                        <span class="green"><%= product.discount %>% Off</span>
                        <% } %></h4>
                        <% if (product.freeShip) { %>
                        <h4 class="green"><i class="fas fa-truck"></i> Env√≠o gratis</h4>
                        <% } %>
                    </div>
                </a>
                <% }) %>  
            </div>
        </section>

    </main>

    <%- include('partials/footer') %> 
</body>
</html>