<!DOCTYPE html>
<html lang="es">
<%- include('partials/head') %>
<body>
    <%- include('partials/header') %> 
    <h1 class="user-form-title">Completá tus datos</h1>
    <form class="user-form" action="/users/register" method="POST" enctype="multipart/form-data">
        <div>
            <input type="text" name="firstname" id="firstname" required placeholder=" ">     
            <label for="firstname" id="nombre-label">Nombre</label>    
            <p class="msg"></p>
        </div>   
        <div>
            <input type="text" id="lastname" name="lastname" required placeholder=" ">
            <label for="lastname">Apellido</label>
            <p class="msg"></p>
        </div>
        <div>
            <input type="text" id="username" name="username" required placeholder=" ">
            <label for="username">Nombre de usuari@</label>
            <p class="msg"></p>
        </div>
        <div>
            <input type="email" id="email" name="email" required placeholder=" ">
            <label for="email">E-mail</label>
            <p class="msg"></p>
        </div>
        <div>
            <input type="file" id="image" name="image">
            <label for="image">Foto de perfil</label>
            <p class="msg"></p>
        </div>
        <div>
            <input type="password" id="password" name="password" required placeholder=" ">
            <label for="password">Contraseña</label>
            <p class="msg"></p>
        </div>
        <div>
            <input type="password" id="passwordcheck" name="passwordcheck" required placeholder=" ">
            <label for="passwordcheck">Confirmar contraseña</label>
            <p class="msg"></p>
        </div>
        <button type="submit" class="submit-button">Continuar</button>
    </form>
    <%- include('partials/footerEmpty') %>
</body>
</html>